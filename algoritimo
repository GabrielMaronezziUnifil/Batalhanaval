    public static int ColocaNavio(int[][] SombraDoTabuleiro, int coluna, int linha) {
        switch (opcao) {
            case 1:
                 if (linha > 4) {
                     System.err.println("escolha a opcao 3 pois n√£o √© possivel posicionar o navio");
                    return 0;
                }else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha + 1][coluna] == 1 || SombraDoTabuleiro[linha + 2][coluna] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha + i][coluna] = 1;
                    }
                }
                return 1;

            case 2:
                if (coluna > 4) {
                    System.err.println("escolha a opcao 4 pois n√£o √© possivel posicionar o navio");
                    return 0;
                }else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha][coluna + 1] == 1 || SombraDoTabuleiro[linha][coluna + 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha][coluna + i] = 1;
                    }
                }
                return 1;

            case 3:
                if (linha < 2) {
                    System.err.println("escolha a opcao 1 pois n√£o √© possivel posicionar o navio");
                    return 0;
                }else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha - 1][coluna] == 1 || SombraDoTabuleiro[linha - 2][coluna] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha - i][coluna] = 1;
                    }
                }
                return 1;

            case 4:
                if (coluna < 2) {
                    System.err.println("escolha a opcao 2 pois n√£o √© possivel posicionar o navio");
                    return 0;
                }else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha][coluna - 1] == 1 || SombraDoTabuleiro[linha][coluna - 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha][coluna - i] = 1;
                    }
                }
                return 1;

            case 5:
                if ((linha > 4) || (coluna > 4)) {
                    System.err.println("escolha a opcao 7 pois n√£o √© possivel posicionar o navio");
                    return 0;
                } else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha + 1][coluna + 1] == 1 || SombraDoTabuleiro[linha + 2][coluna + 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha + i][coluna + i] = 1;
                    }
                }
                return 1;

            case 6:
                if ((linha > 4) || (coluna < 2)) {
                    System.err.println("escolha a opcao 8 pois n√£o √© possivel posicionar o navio");
                    return 0;
                } else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha + 1][coluna - 1] == 1 || SombraDoTabuleiro[linha + 2][coluna - 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha + i][coluna - i] = 1;
                    }
                }
                return 1;
            case 7:
                if ((linha < 2) || (coluna < 2)) {
                    System.err.println("escolha a opcao 5 pois n√£o √© possivel posicionar o navio");
                    return 0;
                }else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha - 1][coluna - 1] == 1 || SombraDoTabuleiro[linha - 2][coluna - 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha - i][coluna - i] = 1;
                    }
                }
                return 1;
            case 8:
                if ((linha < 2) || (coluna > 4)) {
                    System.err.println("escolha a opcao 6 pois n√£o √© possivel posicionar o navio");
                    return 0;
                } else if (SombraDoTabuleiro[linha][coluna] == 1 || SombraDoTabuleiro[linha - 1][coluna + 1] == 1 || SombraDoTabuleiro[linha - 2][coluna + 2] == 1) {
                    System.err.println("Posi√ß√£o ja ocupada por um barco");
                    return 0;
                }else {
                    for (int i = 0; i < 3; i++) {
                        SombraDoTabuleiro[linha - i][coluna + i] = 1;
                    }
                }
                return 1;
        }
        return 0;
    }

    public static void Dartiro(int[] tiro) {
        Scanner sc = new Scanner(System.in);
        do {
            System.out.println("Qual a linha que deseja dar o tiro");
            tiro[0] = sc.nextInt();
            tiro[0]--;
        }while ((tiro[0] <0) || (tiro[0]>= 7));
        do {

            System.out.println("Qual a coluna que deseja dar o tiro");
            tiro[1] = sc.nextInt();
            tiro[1]--;
        }while ((tiro[1] <0) || (tiro[1]>= 7));

    }

    public static int acertou(int[] tiro, int[][] SombraDoNavio, int[][] Tabuleiro,int tentativas) {
        if ((Tabuleiro[tiro[0]][tiro[1]] == 0)|| (Tabuleiro[tiro[0]][tiro[1]] == 1)){
            System.err.println("posi√ß√£o ja verificada por favor verifique outra posi√ß√£o");
            return tentativas;
        }

        if (SombraDoNavio[tiro[0]][tiro[1]] == 1){
            Tabuleiro[tiro[0]][tiro[1]] = 1;
            System.out.println("Parabens voce acertou um navio");
            acertos++;
            return tentativas;
        } else {
            Tabuleiro[tiro[0]][tiro[1]] = 0;
            System.err.println("uma pena voc√™ errou");
            return tentativas-1;
        }
    }
}
