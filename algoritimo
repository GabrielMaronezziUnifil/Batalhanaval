                confnavio = ColocaNavio(SombraDoTabuleiro, coluna, linha);
            } else if (opcao == 5) {
                do {
                    System.out.println("em qual coluna deseja iniciar o navio");
                    coluna = sc.nextInt();
                } while ((coluna < 1) || (coluna > 7));
